---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.jsx";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-white">
		<Navbar client:only="react" />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	html {
		font-family: "LobsterTwo", system-ui, sans-serif;
		
		background: conic-gradient(
				from 162deg at calc(90px * 0.5) calc(90px * 0.68),
				rgba(244, 114, 182, 0.7) 36deg,
				#0000 0
			),
			conic-gradient(
				from 18deg at calc(90px * 0.19) calc(90px * 0.59),
				rgba(244, 114, 182, 0.7) 36deg,
				#0000 0
			),
			conic-gradient(
				from 306deg at calc(90px * 0.81) calc(90px * 0.59),
				rgba(244, 114, 182, 0.7) 36deg,
				#0000 0
			),
			#000000;
		background-position: 0 calc(90px * 0.35);
		background-size: calc(90px + 3.6px) calc(90px + 3.6px);

		color: white;
	}
	@font-face {
		font-family: "LobsterTwo";
		src: url("/fonts/LobsterTwo-Regular.ttf");
		font-weight: 400;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "LobsterTwo";
		src: url("/fonts/LobsterTwo-Italic.ttf");
		font-weight: 400;
		font-style: italic;
		font-display: swap;
	}

	@font-face {
		font-family: "LobsterTwo";
		src: url("/fonts/LobsterTwo-Bold.ttf");
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "LobsterTwo";
		src: url("/fonts/LobsterTwo-BoldItalic.ttf");
		font-weight: 700;
		font-style: italic;
		font-display: swap;
	}
</style>
